{
    "name": "iot-power-meter-app-api",
    "version": "0.0.1",
    "description": "A simple REST API to communicate with incoming data and the ui",
    "engines": {
        "node": ">=13.8.0"
    },
    "main": "dist/index.js",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json && cp -R './src/secrets' './dist/secrets'",
        "lint": "tslint -p \"tsconfig.json\" \"./src/**/*.ts\" -t verbose",
        "start": "node dist/index.js",
        "start:dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "start:watch": "nodemon",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/freeride8/iot-power-meter-app-api.git"
    },
    "author": "Alexander Targov",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/freeride8/iot-power-meter-app-api/issues"
    },
    "homepage": "https://github.com/freeride8/iot-power-meter-app-api#readme",
    "dependencies": {
        "@types/connect-ensure-login": "0.1.5",
        "bcrypt": "5.0.0",
        "bluebird": "3.7.2",
        "connect-ensure-login": "0.1.1",
        "convict": "6.0.0",
        "cors": "2.8.5",
        "cron": "1.8.2",
        "express": "4.17.3",
        "express-async-handler": "1.1.4",
        "helmet": "3.23.3",
        "http-status-codes": "1.4.0",
        "js-yaml": "3.14.0",
        "jsonwebtoken": "8.5.1",
        "jwt-simple": "0.5.6",
        "lodash": "^4.17.20",
        "moment": "2.26.0",
        "mongodb": "3.5.9",
        "mongoose": "5.9.16",
        "morgan": "1.10.0",
        "passport": "0.4.1",
        "passport-jwt": "4.0.0",
        "passport-local": "1.0.0",
        "request": "^2.88.2",
        "request-promise-native": "1.0.8",
        "socket.io": "2.3.0",
        "ts-node": "8.10.1",
        "winston": "3.2.1",
        "ws": "7.3.0"
    },
    "devDependencies": {
        "@types/bcrypt": "3.0.0",
        "@types/bluebird": "3.5.32",
        "@types/convict": "5.2.1",
        "@types/cron": "1.7.2",
        "@types/express": "4.17.6",
        "@types/jest": "25.2.3",
        "@types/lodash": "4.14.153",
        "@types/mongoose": "5.7.21",
        "@types/passport": "1.0.3",
        "@types/passport-jwt": "3.0.3",
        "@types/request-promise-native": "1.0.17",
        "@types/socket.io": "2.1.8",
        "@types/ws": "7.2.4",
        "jest": "26.0.1",
        "nodemon": "2.0.4",
        "ts-jest": "26.0.0",
        "tsconfig-paths": "3.9.0",
        "tslint": "6.1.2",
        "typescript": "3.9.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "roots": [
            "<rootDir>/src"
        ],
        "rootDir": ".",
        "testRegex": "(\\.)(test|spec)\\.(jsx?|tsx?)$",
        "transform": {
            "^.+\\.(js|ts)$": "<rootDir>/node_modules/ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node"
    }
}
